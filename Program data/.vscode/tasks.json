{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",  // Generate debug information
                "/EHsc", // Enable C++ exceptions
                "/nologo", // Suppress the startup logo
                "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe", // Output executable
                "${file}", // Input file
                "/link", // Linker options
                "/SUBSYSTEM:WINDOWS", // Suppress console window
                "User32.lib", // Ensure this line is present
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "compiler: cl.exe"
        }
    ]
}
